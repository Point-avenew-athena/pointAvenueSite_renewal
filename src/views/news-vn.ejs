			<section class="newsletter_wrap">
				<div class="section_inner">
					<h3 class="title_r_02 section_title">Tập san</h3>
					<% 
						const NEWSLETTERS = [3500, 3475, 3433];
						const featuredNewsletter = news.filter(item => NEWSLETTERS.some(id => id === item.id)); 
						
						// 3500 Newsletter On Point – Issue 7
						// 3475 Newsletter On Point – Issue 6
						// 3433  Newsletter On Point – Issue 5

						function formateDate(d){
							const day = new Date(d),
										year = new Intl.DateTimeFormat('en', { year: 'numeric' }).format(day),
										month = new Intl.DateTimeFormat('en', { month: '2-digit' }).format(day),
										date = new Intl.DateTimeFormat('en', { day: '2-digit' }).format(day);

							return `${date}/${month}/${year}`;
						}

					%>
					<ul class="box_type_01 courses_list">
					<% for ( let i = 0; i < featuredNewsletter.length; i++) { %>
						<li class="box_type_01--item courses_item">
							<div class="box_type_01--img courses_img">
								<a href="/vn/news/<%= featuredNewsletter[i].id %>">
									<img src="<%= featuredNewsletter[i].thumbnail.imageUrl %>" alt="<%= featuredNewsletter[i].title %>">
								</a>
							</div>
							<div class="box_type_01--desc courses_desc_box">
								<div class="info">
									<p class="text--gray date"><%= formateDate(featuredNewsletter[i].date.split('T')[0]) %></p>
								</div>
								<p class="title_r_03">
									<a href="/vn/news/<%= featuredNewsletter[i].id %>"><%- featuredNewsletter[i].title %></a>
								</p>
								<div class="desc_text">
									<a href="/vn/news/<%= featuredNewsletter[i].id %>"><%- featuredNewsletter[i].thumbnail.excerpt %></a>									
								</div>
								<a href="/vn/news/<%= featuredNewsletter[i].id %>" class="btn_type_01--sec">
									<span class="btn_inner">Xem thêm</span>
								</a>
							</div>
						</li>
			<% } %> 
					</ul>
					<a href="/vn/news/list/newsletter" class="btn_type_01 view">
						<span class="btn_inner">Xem tất cả</span>
					</a>
				</div>
			</section>
			
